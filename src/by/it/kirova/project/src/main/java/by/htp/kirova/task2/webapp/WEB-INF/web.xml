<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0"
         metadata-complete="true">
    <display-name>Servlet kirova</display-name>
    <!--
    Для любого сервлета нужно определить два тега servlet и servlet-mapping.
    Важно чтобы внутри каждого из этих тегов были теги servlet-name
    и имя сервлета в них было одинаковым!!! Здесь это имя HelloWorld
    -->

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.htp.kirova.task2.java.controller.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/do</url-pattern>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
    

    <filter>
        <filter-name>UTF8</filter-name>
        <filter-class>by.htp.kirova.task2.java.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>code</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>UTF8</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>SetCacheControl</filter-name>
        <filter-class>by.htp.kirova.task2.java.filter.CacheControlFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SetCacheControl</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


